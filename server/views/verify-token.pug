                            p(style='font-size: 16px; text-align: justify; margin: 0px; margin-bottom: 25px; font-weight: normal;')
                                | Link: 
                                a(style='color: #3d3e5a; font-style: italic; font-weight: 700; cursor: pointer;', href=`${host}/verify-token/${token}`) #{host}/verify-token
                            
